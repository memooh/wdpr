@model List<Behandeling>

@{
    ViewData["Title"] = "Selecteer een behandeling";
}

<div class="row">
    <div class="col-md-12">
        <h4>@ViewData["Title"]</h4>
        <hr />
        <div id="content" class="row mb-2">
            @foreach (var item in Model)
            {                
            <div class="col-md-4">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h3 class="mb-0">
                            <p class="text-dark text-break">@item.Naam</p>
                        </h3>
                        <p class="card-text mb-2 text-break">@item.Beschrijving</p>
                        <a asp-route-BehandelingId="@item.Id" asp-action="Behandeling">Aanmelden</a>
                    </div>
                </div>
            </div>
            }
      </div>

    </div>
</div>