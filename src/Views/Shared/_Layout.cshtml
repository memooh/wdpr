<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
      <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">
              <img src="~/images/Logo.png" alt="Logo" height="36">
            </a>
          </li>
        </ul>
      </div>

      <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="OverOns">Over ons</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Diensten">Diensten</a>
          </li>
          @if (SignInManager.IsSignedIn(User))
          {
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="Zelfhulpgroep"
              asp-action="Index">Zelfhulpgroep</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ChatTest">Chat</a>
            </li>
            <li class="nav-item">
              <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index"
              title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
              <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
              </form>
            </li>
          }
          else
          {
            <li class="nav-item">
              <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
          }
        </ul>
      </div>
    </nav>


